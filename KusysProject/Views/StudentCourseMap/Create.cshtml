@model KUSYSDemo.Models.StudentCourseMap.StudentCourseMapListModel
@{
    ViewData["Title"] = "Student Course Assignment";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="mb-4 w-100 w-md-50 w-lg-25">
            </div>
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 bg-transparentm">
                <div class="bg-gradient-primary shadow-primary border-radius-lg p-3">
                    <h3 class="text-white text-primary mb-0">
                        <i class="fa-solid fa-graduation-cap"></i>
                        Student Course Assignment
                    </h3>
                </div>

                <div class="position-relative border-radius-xl overflow-hidden shadow-xl mb-7">
                    <div class="container border-bottom">
                        <div class="row mx-5 my-5">
                            <div class="w-100">
                                <div class="p-3 mb-2">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="input-group input-group-outline my-3">

                                                  @*  <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                                        <option selected>Open this select menu</option>
                                                        <option value="1">One</option>
                                                        <option value="2">Two</option>
                                                        <option value="3">Three</option>
                                                    </select>*@

                                                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                                        <option selected>Open this select menu</option>
                                                        @foreach (var course in Model.CourseId)
                                                        {
                                                            <option value="1">@course</option>
                                                        }
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="form-group d-flex justify-content-end mt-3">
                                                <input type="submit" value="Create" class="btn btn-primary float-right" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
